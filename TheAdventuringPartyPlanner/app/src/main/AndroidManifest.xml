<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="theadventuringparty.theadventuringpartyplanner">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="The Adventuring Party Planner"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".combat_display" />
        <activity android:name=".npc_display" />
        <activity android:name=".CampaignMotivation"/>
        <activity
            android:name=".Main2Activity"
            android:label="@string/title_activity_main2"
            android:theme="@style/Theme.AppCompat.NoActionBar"></activity>
        <activity android:name=".activity_edit_note"/>
        <activity android:name=".activity_new_note"/>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>