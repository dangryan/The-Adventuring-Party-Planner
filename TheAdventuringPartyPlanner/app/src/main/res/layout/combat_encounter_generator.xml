<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <android.support.v7.widget.Toolbar
            android:layout_height="40dp"
            android:layout_width="match_parent"
            app:layout_scrollFlags="scroll|enterAlways"
            android:background="@color/colorPrimary">
        </android.support.v7.widget.Toolbar>

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMode="scrollable"
            android:background="@color/colorPrimary"
            app:tabIndicatorColor="@color/colorPrimaryDark">

            <android.support.design.widget.TabItem
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Combat"
                android:id="@+id/combatTab"/>

            <android.support.design.widget.TabItem
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Non Combat"
                android:id="@+id/nonCombatTab"/>

            <android.support.design.widget.TabItem
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="NPC"
                android:id="@+id/npcTab"/>

            <android.support.design.widget.TabItem
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Notes"
                android:id="@+id/notesTab"
                android:background="@color/colorPrimary"/>
        </android.support.design.widget.TabLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        <RelativeLayout
            android:id="@+id/character_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="theadventuringparty.theadventuringpartyplanner.MainActivity"
            android:foregroundTint="@color/colorPrimary"
            android:background="@drawable/paper_background">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/raceSpinner"
                        android:layout_alignTop="@+id/raceText"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignLeft="@+id/npcNumSpinner"
                        android:layout_alignStart="@+id/npcNumSpinner"/>

                    <Spinner
                        android:layout_height="wrap_content"
                        android:id="@+id/npcNumSpinner"
                        android:layout_width="200dp"
                        android:layout_above="@+id/raceText"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_toRightOf="@+id/generateButton"
                        android:layout_toEndOf="@+id/generateButton"/>

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/genderSpinner"
                        android:layout_alignBottom="@+id/genderText"
                        android:layout_toEndOf="@+id/npcNumText"
                        android:layout_alignLeft="@+id/classSpinner"
                        android:layout_alignStart="@+id/classSpinner"/>

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/classSpinner"
                        android:layout_alignTop="@+id/classText"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignLeft="@+id/raceSpinner"
                        android:layout_alignStart="@+id/raceSpinner"/>

                    <TextView
                        android:text="Number of Enemies:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/genderText"
                        android:fontFamily="serif"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"
                        android:layout_marginTop="14dp"
                        android:layout_below="@+id/classText"
                        android:layout_alignLeft="@+id/raceText"
                        android:layout_alignStart="@+id/raceText"
                        android:layout_toStartOf="@+id/genderSpinner"
                        android:layout_toLeftOf="@+id/genderSpinner"/>

                    <TextView
                        android:text="Loot:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/classText"
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="serif"
                        android:textSize="16sp"
                        android:layout_marginTop="20dp"
                        android:layout_below="@+id/raceSpinner"
                        android:layout_alignLeft="@+id/raceText"
                        android:layout_alignStart="@+id/raceText"/>

                    <TextView
                        android:text="Enemy Type:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/raceText"
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="serif"
                        android:textSize="16sp"
                        android:layout_marginTop="19dp"
                        android:layout_below="@+id/npcNumText"
                        android:layout_alignLeft="@+id/npcNumText"
                        android:layout_alignStart="@+id/npcNumText"/>

                    <TextView
                        android:text="Difficulty:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/npcNumText"
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="serif"
                        android:textSize="16sp"
                        android:layout_marginTop="48dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginStart="25dp"
                        android:layout_below="@+id/pageTitle"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"/>

                    <TextView
                        android:text="Combat Encounter Generator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/pageTitle"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="20sp"
                        android:fontFamily="serif"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_marginTop="45dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"/>

                    <Button
                        android:text="Save"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/generateButton"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:textColor="@android:color/background_light"
                        android:textAlignment="center"
                        android:onClick="onCombatGenerateClick"
                        android:layout_marginTop="53dp"
                        android:layout_below="@+id/genderText"
                        android:layout_centerHorizontal="true"/>

                </RelativeLayout>
            </ScrollView>

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@android:drawable/ic_menu_sort_by_size"
        android:layout_marginRight="16dp"
        android:clickable="true"
        app:fabSize="mini"
        app:backgroundTint="@color/colorPrimary"
        app:elevation="0dp"/>

</android.support.design.widget.CoordinatorLayout>
