<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/noncombat_encounter_generator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="theadventuringparty.theadventuringpartyplanner.Main2Activity$PlaceholderFragment"
    android:foregroundTint="@color/colorPrimary"
    android:background="@drawable/paper_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/generateButton">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="This is where the generated encounter text will go."
                android:layout_width="match_parent"
                android:layout_below="@+id/generateButton"
                android:layout_alignLeft="@+id/textView2"
                android:layout_alignStart="@+id/textView2"
                android:layout_marginTop="20dp"
                android:id="@+id/nonCombatTextDisplay"
                android:layout_alignRight="@+id/pageTitle"
                android:layout_alignEnd="@+id/pageTitle"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="match_parent"
                android:fontFamily="serif"
                android:layout_alignParentBottom="true"/>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:text="NonCombat Encounter Generator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/pageTitle"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:fontFamily="serif"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:text="Event Type:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pageTitle"
        android:layout_alignLeft="@+id/pageTitle"
        android:layout_alignStart="@+id/pageTitle"
        android:layout_marginTop="57dp"
        android:id="@+id/textView"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="serif"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/num_of_npcs_dropdown"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/generateButton"
        android:layout_alignStart="@+id/generateButton"/>


    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/event_dropdown"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Spinner
        android:layout_height="wrap_content"
        android:id="@+id/eventTypeSpinner"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignRight="@+id/pageTitle"
        android:layout_alignEnd="@+id/pageTitle"
        android:layout_alignLeft="@+id/num_of_npcs_dropdown"
        android:layout_alignStart="@+id/num_of_npcs_dropdown"
        android:layout_width="50dp"
        android:entries="@array/nonCombatEventType"
        android:background="@android:color/darker_gray"/>

    <Button
        android:text="Generate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/generateButton"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="@android:color/background_light"
        android:fontFamily="serif"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/event_dropdown"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
