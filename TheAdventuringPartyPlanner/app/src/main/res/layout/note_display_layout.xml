<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/editButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/editButton"
        android:onClick="editNote"
        android:drawableTint="@android:color/background_light"
        android:drawableTintMode="src_atop"
        android:background="@color/color_primary_dark2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:drawableTop="@android:drawable/ic_menu_edit"
        android:layout_alignTop="@+id/noteTitleLabel"
        android:layout_width="40dp"
        android:layout_height="35dp"/>

    <TextView
        android:text="TextView"
        android:layout_height="wrap_content"
        android:id="@+id/noteTitleLabel"
        android:textColor="@android:color/background_dark"
        android:fontFamily="serif"
        android:textSize="16sp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="325dp"/>

</RelativeLayout>