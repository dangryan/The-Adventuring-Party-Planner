<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/load_create_campaign"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="theadventuringparty.theadventuringpartyplanner.MainActivity"
    android:foregroundTint="@color/colorPrimary"
    android:background="@drawable/paper_background">

    <TextView
        android:text="Campaign Motivation:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/pageTitle"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:fontFamily="serif"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/generate_button"
        android:background="@drawable/die"
        android:textColor="@android:color/background_light"
        android:fontFamily="serif"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/nonCombatTextDisplay"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/color_primary_dark2"/>

    <TextView
        android:text="This is where the motivation will go. Lorem ipsum dolor sit amet, consectetur adipiscing elit."
        android:layout_width="wrap_content"
        android:id="@+id/nonCombatTextDisplay"
        android:textColor="@color/colorPrimaryDark"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:fontFamily="serif"
        android:layout_below="@+id/pageTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>
