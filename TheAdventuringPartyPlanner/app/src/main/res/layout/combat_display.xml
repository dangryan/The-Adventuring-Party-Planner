<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/paper_background">

    <TextView
        android:text="Fight!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:id="@+id/pageTitle"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"/>

    <TextView
        android:text="test data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enemyTypeTextView"
        android:layout_alignLeft="@+id/enemyTypeTextView"
        android:layout_alignStart="@+id/enemyTypeTextView"
        android:layout_marginTop="78dp"
        android:id="@+id/lootTextView"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:text="test data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="73dp"
        android:id="@+id/enemyNumTextView"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/lootTextView"
        android:layout_alignLeft="@+id/lootTextView"
        android:layout_alignStart="@+id/lootTextView"/>

    <TextView
        android:text="test data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="59dp"
        android:id="@+id/enemyTypeTextView"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/difficultyTextView"
        android:layout_toRightOf="@+id/pageTitle"
        android:layout_toEndOf="@+id/pageTitle"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        android:id="@+id/difficultyTextView"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:text="test data"
        android:layout_below="@+id/pageTitle"
        android:layout_alignLeft="@+id/enemyTypeTextView"
        android:layout_alignStart="@+id/enemyTypeTextView"/>

    <TextView
        android:text="Loot: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:textSize="18sp"
        android:textColor="@android:color/background_dark"
        android:layout_below="@+id/lootTextView"
        android:layout_alignRight="@+id/pageTitle"
        android:layout_alignEnd="@+id/pageTitle"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"/>

    <TextView
        android:text="Enemy Number: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:textSize="18sp"
        android:textColor="@android:color/background_dark"
        android:layout_alignBaseline="@+id/enemyNumTextView"
        android:layout_alignBottom="@+id/enemyNumTextView"
        android:layout_alignRight="@+id/textView12"
        android:layout_alignEnd="@+id/textView12"/>

    <TextView
        android:text="EnemyType:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:textSize="18sp"
        android:textColor="@android:color/background_dark"
        android:layout_alignBaseline="@+id/enemyTypeTextView"
        android:layout_alignBottom="@+id/enemyTypeTextView"
        android:layout_alignRight="@+id/textView12"
        android:layout_alignEnd="@+id/textView12"/>

    <TextView
        android:text="Difficulty:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:textSize="18sp"
        android:textColor="@android:color/background_dark"
        android:layout_alignBaseline="@+id/difficultyTextView"
        android:layout_alignBottom="@+id/difficultyTextView"
        android:layout_alignRight="@+id/textView11"
        android:layout_alignEnd="@+id/textView11"/>
</RelativeLayout>