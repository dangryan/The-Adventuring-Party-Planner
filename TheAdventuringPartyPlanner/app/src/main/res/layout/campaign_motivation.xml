<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/load_create_campaign"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="theadventuringparty.theadventuringpartyplanner.MainActivity"
    android:foregroundTint="@color/colorPrimary"
    android:background="@drawable/paper_background">

    <TextView
        android:text="Campaign Motivation:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/pageTitle"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:fontFamily="serif"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/generate_button"
        android:background="@drawable/die"
        android:textColor="@android:color/background_light"
        android:fontFamily="serif"
        android:backgroundTint="@color/color_primary_dark2"
        android:onClick="motivationOnClick"
        android:layout_below="@+id/pageTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="91dp"/>

    <TextView
        android:text='A campaign motivation is a "seed" of a story. These motivations are intended to kick start the adventure.'
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pageTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:id="@+id/motivationDescription"
        android:textColor="@android:color/background_dark"
        android:fontFamily="serif"/>

    <TextView
        android:text="Roll!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonLabel"
        android:layout_below="@+id/generate_button"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/background_dark"
        android:fontFamily="serif"/>

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/campaignMotivationTextView"
        android:textColor="@android:color/background_dark"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:scrollbars="vertical"
        android:layout_below="@+id/buttonLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:textSize="16sp"/>

</RelativeLayout>
