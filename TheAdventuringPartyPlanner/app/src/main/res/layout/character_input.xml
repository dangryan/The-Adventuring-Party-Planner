<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/character_input"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="theadventuringparty.theadventuringpartyplanner.MainActivity"
    android:background="@drawable/paper_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Character Input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pageTitle"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:fontFamily="serif"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"/>

            <EditText
                android:text="test"
                android:layout_width="match_parent"
                android:id="@+id/notes_input"
                android:paddingTop="100dp"
                android:layout_below="@+id/notesText"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="serif"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <Button
                android:text="Save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/generateButton"
                android:backgroundTint="@color/colorPrimaryDark"
                android:textColor="@android:color/background_light"
                android:textAlignment="center"
                android:layout_below="@+id/notes_input"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:fontFamily="serif"
                android:onClick="onCharacterInputClick"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/name_input"
                android:hint="Name"
                android:textSize="14sp"
                android:text="name"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="serif"
                android:layout_alignBaseline="@+id/genderText"
                android:layout_alignBottom="@+id/genderText"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/level_input"
                android:text="level"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="serif"
                android:textSize="14sp"
                android:layout_below="@+id/name_input"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/armorClass_input"
                android:text="number"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="serif"
                android:textSize="14sp"
                android:layout_below="@+id/level_input"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/hitPoints_input"
                android:text="number"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="serif"
                android:textSize="14sp"
                android:layout_below="@+id/armorClass_input"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:text="Hit Points (HP):"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/classText"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="serif"
                android:textSize="16sp"
                android:layout_alignBaseline="@+id/hitPoints_input"
                android:layout_alignBottom="@+id/hitPoints_input"
                android:layout_alignLeft="@+id/raceText"
                android:layout_alignStart="@+id/raceText"/>

            <TextView
                android:text="Notes:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/notesText"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:fontFamily="serif"
                android:layout_below="@+id/hitPoints_input"
                android:layout_alignLeft="@+id/classText"
                android:layout_alignStart="@+id/classText"/>

            <Button
                android:text="John Goodman - Level 10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="42dp"
                android:id="@+id/button"
                android:backgroundTint="@color/colorPrimaryDark"
                android:textColor="@android:color/background_light"
                android:layout_weight="1"
                android:layout_below="@+id/pageTitle"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:fontFamily="serif"/>

            <TextView
                android:text="Player name:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:id="@+id/genderText"
                android:fontFamily="serif"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:layout_below="@+id/button"
                android:layout_toLeftOf="@+id/generateButton"
                android:layout_toStartOf="@+id/generateButton"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:text="Player level:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/playerLevelText"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="serif"
                android:textSize="16sp"
                android:layout_alignBaseline="@+id/level_input"
                android:layout_alignBottom="@+id/level_input"
                android:layout_alignLeft="@+id/genderText"
                android:layout_alignStart="@+id/genderText"/>

            <TextView
                android:text="Armor class:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/raceText"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="serif"
                android:textSize="16sp"
                android:layout_alignBaseline="@+id/armorClass_input"
                android:layout_alignBottom="@+id/armorClass_input"
                android:layout_alignRight="@+id/playerLevelText"
                android:layout_alignEnd="@+id/playerLevelText"/>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
