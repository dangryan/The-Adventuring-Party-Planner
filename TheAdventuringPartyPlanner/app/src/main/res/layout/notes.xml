<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="dangryan.notestest.MainActivity"
    android:background="@drawable/paper_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Campaign Notes:"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:fontFamily="serif"
        android:textColor="@android:color/background_dark"
        android:id="@+id/pageTitle"/>

    <ListView
        android:layout_width="match_parent"
        android:id="@+id/noteListView"
        android:layout_below="@+id/pageTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp"
        android:layout_height="300dp"/>

    <Button
        android:text="New Note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_below="@+id/noteListView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        style="@style/Widget.AppCompat.Button"
        android:onClick="onNewNoteButtonClick"
        android:background="@color/color_primary_dark2"
        android:textColor="@android:color/background_light"
        android:fontFamily="serif"/>
</RelativeLayout>
