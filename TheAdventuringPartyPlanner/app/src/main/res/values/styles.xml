<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/light_brown</item>
        <item name="android:textColorPrimary">@android:color/background_dark</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ActionBarTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@android:color/background_light</item>
        <item name="android:textColorPrimaryInverse">@android:color/darker_gray</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
        <item name="android:colorBackground">@android:color/background_dark</item>
    </style>

</resources>
